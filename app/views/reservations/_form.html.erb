<div class="container mt-4 text-center">
  <%= form_for @reservation, path: reservations_path(bus_id: @bus),
       method: :post, id: "reservation-form", class: "mt-3" do |f| %>

    <!-- Number of Seats -->
    <div class="mb-3">
        <%= f.label :number_of_seats, "Number of Seats", class: "form-label" %>
        <%= f.number_field :number_of_seats, min: 1, max: @bus.number_of_seats, class: "form-control" %>
    </div>

    <div class="mb-3">
        <%= f.label :seats, "Allocated Seat", class: "form-label" %>
        <%= f.text_field :seats, multiple: true, class: "form-control" %>
    </div>

    <!-- Reservation Date -->
    <div class="mb-3">
        <%= f.label :reservation_date, "Reservation Date", class: "form-label" %>
        <%= f.date_field :reservation_date, placeholder: "dd-mm-yyyy", min: Date.today, max: "2024-12-31", class: "form-control", id: "reservation_date_input" %>
    </div>

    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :bus_id, value: @bus.id %>

    <!-- Submit Button -->
    <%= f.submit "Book Seats", class: "btn btn-primary" %>
  <% end %>
</div>
